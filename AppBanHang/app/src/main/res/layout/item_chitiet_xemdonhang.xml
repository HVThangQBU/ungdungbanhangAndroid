<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">

    <RelativeLayout
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_imgchitietxemdonhang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_perm_identity_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/item_imgchitietxemdonhang"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/item_tensp_xemdonhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizePresetSizes=""
                android:text=" Ao Nam"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_giaxemdonhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gia :  3423"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp" />

            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/item_sol_xemdonghang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="So luong: 2"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>