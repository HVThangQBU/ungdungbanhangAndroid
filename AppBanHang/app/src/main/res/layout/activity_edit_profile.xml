<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.appbanhangadmin.activity.ProfileActivity">
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbarsuaprofile"
      app:layout_constraintTop_toTopOf="parent"
      app:title="Thông tin "
      android:layout_width="match_parent"
      android:background="#EACB7A"
      android:layout_height="?attr/actionBarSize"/>

  <LinearLayout
      app:layout_constraintTop_toBottomOf="@+id/toolbarsuaprofile"
      android:id="@+id/layoutprofile"
      android:layout_width="410dp"
      android:layout_height="230dp"
      android:background="@color/colorprofile"
      android:orientation="vertical"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="1dp"
      tools:layout_editor_absoluteY="70dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_baseline_account_circle_24" />

  </LinearLayout>
  <androidx.cardview.widget.CardView
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      app:cardCornerRadius="4dp"
      android:id="@+id/cardView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/layoutprofile"
      android:elevation="8dp"
      android:layout_marginTop="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <View
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="5dp"
          android:background="@android:color/darker_gray"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>
      <LinearLayout
          android:padding="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên: "
            android:textSize="15sp"
            android:gravity="center"/>
<!--        <TextView-->
<!--            android:id="@+id/txtNameUserprofile"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:text="Hoàng Thắng"-->
<!--            android:textSize="15sp"-->
<!--            android:textStyle="bold" />-->
        <EditText
            android:id="@+id/edtsuatenprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:text="sửa tên"
            android:background="@null"
            android:textSize="15sp" />


      </LinearLayout>
      <View
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="5dp"
          android:background="@android:color/darker_gray"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

      <LinearLayout
          android:padding="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính: "
            android:textSize="15sp"
            android:gravity="center"/>

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
          <RadioButton
              android:id="@+id/radiobuttongtnu"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Nữ">

          </RadioButton>
          <RadioButton
              android:id="@+id/radiobuttongtnam"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Nam">

          </RadioButton>
        </RadioGroup>
<!--        <TextView-->
<!--            android:id="@+id/txtgioitinhprofile"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:text="Nam"-->
<!--            android:textSize="15sp"-->
<!--            android:textStyle="bold" />-->
      </LinearLayout>
      <View
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="5dp"
          android:background="@android:color/darker_gray"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

      <LinearLayout
          android:padding="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: "
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtngaysinhprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="10/10/2001"
            android:textSize="15sp"
            android:textStyle="bold" />
      </LinearLayout>
      <View
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="5dp"
          android:background="@android:color/darker_gray"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>
      <LinearLayout
          android:padding="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtsdtprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="0980867876765"
            android:textSize="15sp"
            android:textStyle="bold" />

      </LinearLayout>
      <View

          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="5dp"
          android:background="@android:color/darker_gray"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>

      <LinearLayout
          android:padding="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtemailproflie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="10/10/2001"
            android:textSize="15sp"
            android:textStyle="bold" />

      </LinearLayout>
      <View
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="5dp"
          android:background="@android:color/darker_gray"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>
      <LinearLayout
          android:padding="5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txtdiachiprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="10/10/2001"
            android:textSize="15sp"
            android:textStyle="bold" />

      </LinearLayout>
      <View
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="5dp"
          android:background="@android:color/darker_gray"
          android:layout_width="match_parent"
          android:layout_height="1dp"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/btnsuaprofile"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="sửa">

          </androidx.appcompat.widget.AppCompatButton>
      </LinearLayout>
    </LinearLayout>


  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>